{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "app",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./src/server/*"],
      "@common/*": ["./src/common/*"],
      "@client/*": ["./src/client/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "app"]
}
